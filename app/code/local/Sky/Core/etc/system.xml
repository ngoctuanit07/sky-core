<config>    
	<tabs>
		<score translate="label">
			<label>Sky Core</label>
			<sort_order>90</sort_order>
		</score>
	</tabs>
	<sections>
		<score translate="label" module="skycore">
			<label>Sky Core Settings</label>
			<tab>score</tab>
			<class>separator-top</class>
			<frontend_type>text</frontend_type>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<frontend_model>adminhtml/system_config_form</frontend_model>
			<groups>
				<!--GENERAL SETTING -->
				<settings translate="label" module="skycore">
					<label>Setting Core</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<frontend_model>adminhtml/system_config_form_fieldset</frontend_model>
					<fields>
						<status>
							<label>Enable Module?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<validate>required-entry</validate>
						</status>
					</fields>
				</settings>
			 </groups>
		</score>
	</sections>
</config>
						